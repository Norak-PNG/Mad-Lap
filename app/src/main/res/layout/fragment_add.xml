<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".fragment.AddFrag">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#E2EAF4">

        <TextView
            android:id="@+id/name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="20dp"
            android:text="@string/email"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/logout"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:backgroundTint="#060270"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="12dp"
            android:text="@string/log_out" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_expense"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/textViewa6"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="@string/amount" />

    <EditText
        android:id="@+id/editTextText1"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@drawable/for_edit_text"
        android:hint="@string/enter_amount"
        android:ems="10"
        android:inputType="text"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/currency"
        />

    <Spinner
        android:id="@+id/currency"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/for_edit_text"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="340dp"
        android:text="@string/category"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/for_edit_text"
                />
        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/add"
            android:drawableTint="@color/white"
            android:backgroundTint="#060270"
            />

    </LinearLayout>



    <TextView
        android:id="@+id/textView10"
        android:layout_width="340dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="@string/remark" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@drawable/for_edit_text"
        android:hint="@string/enter_remark"
        android:padding="10dp"
        android:ems="10"
        android:inputType="text" />

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        app:cardElevation="1dp"
        app:cardCornerRadius="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:text="Add an image" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="20dp">

                <Button
                    android:id="@+id/open_camera_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#060270"
                    android:text="Open Camera" />

                <Button
                    android:id="@+id/galleryButton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#060270"
                    android:text="Gallery" />

            </LinearLayout>

            <ImageView
                android:id="@+id/captured_image_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:srcCompat="@tools:sample/avatars"
                android:scaleType="centerCrop"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/button"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/add"
        android:textColor="#FFFFFF"
        android:backgroundTint="#060270"/>


</LinearLayout>